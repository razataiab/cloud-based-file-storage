<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.javafxapplication1.FileController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="File Management"/>
    
    <Button fx:id="selectFileButton" text="Select File to Upload" onAction="#handleSelectFileButton"/>
    <TextField fx:id="filePathField" promptText="Selected file path will appear here" editable="false"/>
    <Button fx:id="uploadButton" text="Upload File" onAction="#handleUploadButton"/>

    <Button fx:id="selectFileToRenameButton" text="Select File to Rename" onAction="#handleSelectFileToRenameButton"/>
    <TextField fx:id="renameFilePathField" promptText="Selected file path to rename will appear here" editable="false"/>
    <Button fx:id="renameButton" text="Rename File" onAction="#handleRenameButton"/>

    <Button fx:id="selectFileToDeleteButton" text="Select Files to Delete" onAction="#handleSelectFileToDeleteButton"/>
    <ListView fx:id="deleteFileListView" prefHeight="150" />
    <Button fx:id="deleteButton" text="Delete File" onAction="#handleDeleteButton"/>
</VBox>
