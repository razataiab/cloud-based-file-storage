<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxapplication1.DeleteFileController" spacing="10" alignment="center" prefWidth="400" prefHeight="300">
    <TextField fx:id="filePathField" promptText="Selected file path" editable="false" />
    <Button text="Select Files" onAction="#handleSelectFileToDeleteButton"/>
    <ListView fx:id="deleteFileListView" prefHeight="150"/>
    <Button text="Delete" onAction="#handleDeleteButton"/>
</VBox>
